
<%= simple_form_for(@char_sheet) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :player_name %>
    <%= f.input :char_name %>
    <%= f.input :race %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
